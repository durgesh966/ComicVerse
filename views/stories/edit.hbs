<h4>Edit Story</h4>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        <div class="row">
            <div class="input-area">
                <input type="hidden" name="_method" value="PUT">
                <label for="title" style="font-size: 16px;" value="{{story.title}}"></label>
            </div>
        </div>

        <div class="row">
            <div class="select-area">
                <select id="status" name="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="pera-area">
                <h5>Tell Us Your Story:</h5>
                <textarea class="text-area" id="body" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>